{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Server",
			"type": "shell",
			"command": "node",
			"args": [
				"server.js"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true
			},
			"problemMatcher": []
		},
		{
			"label": "Update Dependencies",
			"type": "npm",
			"script": "install",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true
			},
			"problemMatcher": []
		}
	]
}